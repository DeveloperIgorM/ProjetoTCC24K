@model IEnumerable<Aula14DAAWW.Models.Jogo>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@foreach(var item in Model)
{
    <div class="card" style="width: 18rem; display: inline-block; margin-right:10px">
        <img src="@item.LinkImagem" class="card-img-top"
        height-"120px />
        <div class="card-body">
            <h5>@item.NomeJogo</h5>
            
            <a asp-controller="Jogos"
                 asp-action="Details"
                asp-route-id="@item.Id"
                class="btn btn-primary">Saiba mais...</a>

        </div>

    </div>
}